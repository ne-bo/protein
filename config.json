{
    "name": "Protein",
    "cuda": true,
    "gpu": 0,
    "data_loader": {
        "data_dir": "/home/ubuntu/data/protein",
        "batch_size_train": 100,
        "batch_size_val": 128,
        "batch_size_test": 2,
        "shuffle": true,
        "drop_last": false
    },
    "validation": {
        "validation_split": 0.1,
        "shuffle": true
    },

    "lr_scheduler_type": "ExponentialLR",
    "lr_scheduler_freq": 5,
    "lr_scheduler": {
            "gamma": 0.9
    },
 
    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.0001,
        "weight_decay": 0.0001,
        "amsgrad": true
    },
    "loss": "bce",
    "metrics": ["my_metric", "my_metric2"],
    "trainer": {
        "epochs": 500,
        "save_dir": "saved/",
        "save_freq": 10,
        "verbosity": 2,
        "monitor": "loss",
        "monitor_mode": "min"
    },
    "arch": "ProteinModel",
    "model": {
        "desired_embedding_dimension": 2048
    },
    "pack_volume": 5851,
    "temp_folder": "/home/ubuntu/data/temp/protein",
    "class_number": 28,
    "sampling": "*uniform",
    "similarity_approach": false
}
